
@model DoctorDto
@{
    ViewData["Title"] = "DoctorCreate";
    Layout = "~/Areas/DoctorPanel/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Doctor</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data" multiple>
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input class="form-control" asp-for="FullName">
                        <span asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="About"></label>
                        <input class="form-control" asp-for="About">
                        <span asp-validation-for="About"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingTimes"></label>
                        <input class="form-control" asp-for="WorkingTimes">
                        <span asp-validation-for="WorkingTimes"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConsultingFee"></label>
                        <input class="form-control" asp-for="ConsultingFee">
                        <span asp-validation-for="ConsultingFee"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkingOfficeName"></label>
                        <select asp-for="WorkingOfficeName" asp-items="@(ViewBag.Office)">
                            <option>Please select one</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Branch"></label>
                        <select asp-for="Branch" asp-items="@(ViewBag.Categories)">
                            <option>Please select one</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="product" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


